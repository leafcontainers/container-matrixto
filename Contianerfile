FROM docker.io/library/node:current-bookworm

RUN apt update 
RUN apt upgrade -y
RUN apt install git bash

COPY ./builder.sh /tmp/builder.sh
RUN bash /tmp/builder.sh

RUN apt remove -y git

RUN rm -rf /tmp/* 
RUN mkdir -p /tmp
RUN chmod -R 1777 /tmp

WORKDIR /opt/matrix_to/
EXPOSE 5000
CMD ["yarn", "start"]
